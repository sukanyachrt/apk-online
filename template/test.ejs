<html>

<head>
    <meta charset="utf-8">
    <style>
        @page {

            margin: 100px 25px;
            size: A4;

            @top-left {
                content: element(pageHeader);
            }

            @bottom-left {
                content: element(pageHeader);
            }
        }

        #pageHeader {
            /* height: 120mm; */
            height: 0px;
            position: running(pageHeader);
        }

        #pageFooter {
            text-align: right;
            position: running(pageFooter);
        }


        body {
            /*  font-family: "Helvetica Neue", sans-serif;*/
            font-family: "Angsana New", sans-serif;
            color: #000;
            padding: 20px;
        }

        p {
            page-break-inside: avoid;
        }

        table {

            width: 100%;
            text-align: left;
            font-size: 1.35em;

        }

        thead {
            display: table-header-group;
        }

        .center {
            text-align: center;
        }

        .right {
            text-align: right;
            padding-right: 5%;
        }

        .left {
            text-align: left;
            padding-left: 5%;
        }




        tr {
            page-break-inside: avoid;
        }

        .column {
            float: left;
            width: 50%;
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>

<body>

    <footer id="pageFooter"></footer>
    <table>


        <tr>
            <th class="center" colspan="2" style="text-align:center;">
                <img src="http://localhost:3006/api/v1/image/logoicon.jpg" alt="">
            </th>

        </tr>
        <tr>
            <th class="center" colspan="2" style="padding-top: 20px;">บันทึกภายใน</th>

        </tr>
        <tr>
            <th class="right" colspan="2" style="padding-top: 10px;">วันที่ : <%= data.dateKey %>
            </th>
        </tr>

        <tr>
            <th class="left" colspan="2">จาก : <%= data.data.from %>
            </th>
        </tr>
        <tr>
            <th class="left" colspan="2">เรื่อง : <%= data.data.title %>
            </th>
        </tr>
        <tr>
            <th style="padding-left: 5%; padding-right: 5%;" colspan="2">
                <hr size="2" color="000000">
            </th>
        </tr>
        <tr style="page-break-inside: avoid">
            <td style="padding-left: 5%;" colspan="2">
                <%- data.data.detail -%>
            </td>
        </tr>

        <tr style="page-break-inside: avoid;">
            <td class="center" style="padding: 30px 10px 30px 10px;" colspan="2">
                <div class="row">
                    <div class="column" style="text-align: center; page-break-inside: avoid; display: block;">

                        <br />

                    </div>
                    <div class="column" style="text-align: center; page-break-inside: avoid; display: block;">


                        <%= employ.fullname %>
                            <br />
                            <%= employ.position %>
                    </div>

                </div>

            </td>
        </tr>


        <tr style="page-break-inside: avoid">
            <td colspan="2">
                <div class="row">

                    <% for(var i=0; i < data.typememo.apr_.length; i++) { %>
                        <div class="column" style="text-align: center; page-break-inside: avoid; display: block;">
                            <% if(data.typememo.apr_[i].signature==undefined) { %>
                                <!-- <img style=" height: 65px;
                                width: 100px; margin: 0; padding: 0;   border-bottom: 2px dotted black;"
                                    src="http://localhost:3006/api/v1/image/sign/nosign.png" /> -->
                                <div style="height: 100px;
                                        width: 100%; margin: 0; padding: 0;  text-align: center;
                                        ">
                                    <img style='
                                         max-width: 100%;
                                         max-height: 100%;
                                         width: auto; text-align: center;
                                         height: auto; border-bottom: 2px dotted black;'
                                        src="http://localhost:3006/api/v1/image/sign/nosign.png">
                                </div>
                                <% } else if(data.typememo.apr_[i].signature=="" ) { %>
                                    <!-- <img style=" height: 65px;
                                width: 100px; margin: 0; padding: 0;   border-bottom: 2px dotted black;"
                                        src="http://localhost:3006/api/v1/image/sign/nosign.png" /> -->
                                    <div style="height: 100px;
                                        width: 100%; margin: 0; padding: 0;  text-align: center;
                                        ">
                                        <img style='
                                         max-width: 100%;
                                         max-height: 100%;
                                         width: auto; text-align: center;
                                         height: auto; border-bottom: 2px dotted black;'
                                            src="http://localhost:3006/api/v1/image/sign/nosign.png">
                                    </div>

                                    <% } else { %>
                                        <div style="height: 100px;
                                        width: 100%; margin: 0; padding: 0;  text-align: center;
                                        ">
                                            <img style='
                                         max-width: 100%;
                                         max-height: 100%;
                                         width: auto; text-align: center;
                                         height: auto; border-bottom: 2px dotted black;'
                                                src=<%=data.typememo.apr_[i].signature%> />
                                        </div>



                                        <% } %>

                                            <%=data.typememo.apr_[i].fullname%>
                                                <br />
                                                <b>
                                                    <%=data.typememo.apr_[i].role%>
                                                </b>
                                                <br />
                                                <b>
                                                    <%=data.typememo.apr_[i].stApr%>
                                                </b>
                                                <br />
                                                <b>วันที่ : <%=data.typememo.apr_[i].dateApr%></b>
                        </div>

                        <% } %>
                </div>
            </td>
        </tr>


    </table>

</body>

</html>